{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

    <h3>Registreer</h3>

    {{ form_start(registrationForm) }}
    <div class="w-25">
        <div class="form-group">
            {{ form_label(registrationForm.name, NULL, {'label': 'Naam'}) }}
            {{ form_widget(registrationForm.name, {'attr': {'class': 'form-control'} }) }}
        </div>
        <div class="form-group">
            {{ form_label(registrationForm.email, NULL, {'label': 'Email'}) }}
            {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control', 'placeholder': 'mail@voorbeeld.nl'} }) }}
        </div>
        <div class="form-group">
            {{ form_label(registrationForm.plainPassword.first, NULL, {'label': 'Wachtwoord'}) }}
            {{ form_widget(registrationForm.plainPassword.first, {'attr': {'class': 'form-control'} }) }}
        </div>
        <div class="form-group">
            {{ form_label(registrationForm.plainPassword.second, NULL, {'label': 'Wachtwoord herhalen'}) }}
            {{ form_widget(registrationForm.plainPassword.second, {'attr': {'class': 'form-control'} }) }}
        </div>

        <button class="btn btn-primary">Registreer</button>
    </div>
    {{ form_end(registrationForm) }}
{% endblock %}